<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.virginactive.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".view.ui.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.ResetPasswordMailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.CheckMailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.LandingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ui.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>